#!/bin/sh

DIALOG_RESULT=$(echo -e 'Kijlentkezés\nAlvás\nReboot\nPoweroff' | rofi -dmenu -i -p "SYSTEM" -hide-scrollbar -tokenize -lines 7 -eh 1 -width 25 -location 0 -xoffset 0 -yoffset 0 -padding 20 -disable-history)

case $DIALOG_RESULT in
        "Kijelentkezés" ) bspc quit ;;
        "Alvás") systemctl suspend ;;
        "Reboot") systemctl reboot ;;
        "Poweroff") systemctl poweroff ;;
        *) exit 0
esac

